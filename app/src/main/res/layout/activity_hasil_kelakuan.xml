<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HasilKelakuanActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="KELAKUAN SISWA"
        android:textColor="#08CDBB"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.099" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="146dp"
        android:layout_height="284dp"
        android:layout_margin="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:layout_marginTop="16dp"
        android:outlineAmbientShadowColor="#000000"
        android:outlineProvider="none"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        tools:ignore="ExtraText,MissingConstraints,VisualLintBounds">
        android:stretchColumns="1"
        <!-- Baris 1 -->
        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_margin="1dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:padding="8dp"
                android:text="Nama"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/namaText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_margin="1dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:padding="8dp"
                android:textAlignment="center"
                android:textSize="20sp" />
        </TableRow>

        <!-- Baris 2 -->
        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_margin="1dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:padding="8dp"
                android:text="Kelas"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/kelasText"
                android:layout_width="71dp"
                android:layout_height="38dp"
                android:layout_column="2"
                android:layout_margin="1dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:padding="8dp"
                android:textAlignment="center"
                android:textSize="20sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_margin="1dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:padding="8dp"
                android:text="Disiplin"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/aText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_margin="1dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:padding="8dp"
                android:textAlignment="center"
                android:textSize="20sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_margin="1dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:padding="8dp"
                android:text="Peduli"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/bText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_margin="1dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:padding="8dp"
                android:textAlignment="center"
                android:textSize="20sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_margin="1dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:outlineAmbientShadowColor="#000000"
                android:padding="8dp"
                android:text="Sopan"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/cText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_margin="1dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:padding="8dp"
                android:textAlignment="center"
                android:textSize="20sp" />
        </TableRow>

        <TableRow/>


    </TableLayout>

    <TextView
        android:id="@+id/keterangan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:capitalize="words"
        android:text="TextView"
        android:textColor="#4CAF50"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>