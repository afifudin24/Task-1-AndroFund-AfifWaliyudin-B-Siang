<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="PENILAIAN SISWA"
        android:textColor="#E91E63"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.396" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="410dp"
        android:layout_height="115dp"
        android:layout_marginTop="56dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="5px"
            android:paddingVertical="5px">

            <Button
                android:id="@+id/kenilai"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:layout_margin="5px"
                android:layout_marginHorizontal="5px"
                android:layout_marginVertical="5px"
                android:layout_marginStart="5px"
                android:backgroundTint="#FF5722"
                android:text="Nilai Akademis" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="201dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="5px"
            android:paddingVertical="5px">

            <Button
                android:id="@+id/kekelakuan"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:layout_margin="5px"
                android:layout_marginHorizontal="5px"
                android:layout_marginVertical="5px"
                android:layout_marginStart="5px"
                android:backgroundTint="#4CAF50"
                android:text="Kelakuan Siswa" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
